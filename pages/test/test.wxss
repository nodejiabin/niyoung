/* pages/test/test.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2E86AB;
}

/* 状态显示区域 */
.status-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.value.success {
  color: #52c41a;
  font-weight: bold;
}

.value.error {
  color: #ff4d4f;
  font-weight: bold;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.btn:last-child {
  margin-bottom: 0;
}

.btn.primary {
  background-color: #2E86AB;
  color: white;
}

.btn.secondary {
  background-color: #ff4d4f;
  color: white;
}

.btn:not(.primary):not(.secondary) {
  background-color: #f0f0f0;
  color: #666;
}

/* 日志区域 */
.log-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.log-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.log-container {
  height: 400rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.log-item {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.log-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.log-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.log-content {
  font-size: 26rpx;
  color: #333;
  display: block;
} 