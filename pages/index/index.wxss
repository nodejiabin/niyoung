/* pages/index/index.wxss */

/* 搜索容器 */
.search-container {
  padding: 20rpx;
  background-color: var(--white);
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: var(--background-color);
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid var(--border-color);
}

.search-icon {
  margin-right: 16rpx;
  color: var(--text-lighter);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.search-input::placeholder {
  color: var(--text-lighter);
}

/* 轮播图容器 */
.banner-container {
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: var(--radius);
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类导航 */
.category-container {
  background-color: var(--white);
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
  padding: 20rpx 0;
  border-radius: var(--radius);
  background-color: var(--background-color);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.category-item:hover {
  background-color: var(--primary-light);
  transform: translateY(-4rpx);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-color);
  text-align: center;
}

/* 内容容器 */
.content-container {
  flex: 1;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: var(--white);
  border-radius: var(--radius);
  margin-bottom: 20rpx;
  box-shadow: var(--shadow);
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.content-filter {
  display: flex;
  background-color: var(--background-color);
  border-radius: 50rpx;
  padding: 6rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: var(--text-light);
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: var(--primary-color);
  color: var(--white);
}

/* 内容列表 */
.content-list {
  margin-bottom: 20rpx;
}

.content-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.content-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 20px rgba(46, 134, 171, 0.15);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
}

/* 内容文本 */
.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  margin-bottom: 20rpx;
  word-wrap: break-word;
}

/* 图片网格 */
.content-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.content-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: var(--radius-small);
  object-fit: cover;
}

/* 单张图片时的样式 */
.content-images .content-image:only-child {
  width: 100%;
  height: 400rpx;
}

/* 车辆信息 */
.car-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--background-color);
  padding: 16rpx 20rpx;
  border-radius: var(--radius);
  margin-bottom: 20rpx;
  border-left: 6rpx solid var(--primary-color);
}

.car-brand {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--primary-color);
}

.car-year {
  font-size: 24rpx;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1px solid var(--border-color);
}

.action-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.action-item:hover {
  background-color: var(--background-color);
}

.action-icon {
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 50rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.load-more-btn:hover {
  background-color: var(--primary-dark);
  transform: translateY(-2rpx);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .category-item {
    width: 30%;
  }
  
  .content-image {
    width: 160rpx;
    height: 160rpx;
  }
}

@media (max-width: 600rpx) {
  .category-item {
    width: 45%;
  }
  
  .action-bar {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .action-item {
    width: 100%;
    justify-content: center;
  }
} 