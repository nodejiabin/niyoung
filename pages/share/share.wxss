/* pages/share/share.wxss */

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: var(--white);
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 区块标题 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.title-desc {
  font-size: 24rpx;
  color: var(--text-lighter);
}

/* 图片上传区域 */
.upload-section {
  margin-bottom: 20rpx;
}

.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius);
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: var(--radius);
  background-color: var(--background-color);
  color: var(--text-lighter);
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
}

.upload-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 内容输入区域 */
.content-section {
  margin-bottom: 20rpx;
}

.content-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius);
  font-size: 28rpx;
  line-height: 1.6;
  background-color: var(--background-color);
  color: var(--text-color);
  resize: none;
}

.content-textarea:focus {
  border-color: var(--primary-color);
  background-color: var(--white);
}

.content-counter {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.counter-text {
  font-size: 24rpx;
  color: var(--text-lighter);
}

/* 车辆信息区域 */
.car-info-section {
  margin-bottom: 20rpx;
}

.car-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 80rpx;
}

.form-label {
  width: 120rpx;
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
}

.form-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius);
  font-size: 28rpx;
  background-color: var(--background-color);
  color: var(--text-color);
}

.form-input:focus {
  border-color: var(--primary-color);
  background-color: var(--white);
}

.form-picker {
  flex: 1;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius);
  background-color: var(--background-color);
  min-height: 80rpx;
}

.picker-text {
  font-size: 28rpx;
  color: var(--text-color);
}

.picker-content:hover {
  border-color: var(--primary-color);
  background-color: var(--white);
}

/* 位置信息区域 */
.location-section {
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius);
  background-color: var(--background-color);
  transition: all 0.3s ease;
}

.location-item:hover {
  border-color: var(--primary-color);
  background-color: var(--white);
}

.location-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
  margin: 0 20rpx;
}

/* 隐私设置区域 */
.privacy-section {
  margin-bottom: 40rpx;
}

.privacy-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.privacy-item:last-child {
  border-bottom: none;
}

.privacy-label {
  font-size: 28rpx;
  color: var(--text-color);
}

.privacy-switch {
  transform: scale(0.8);
}

/* 提交按钮区域 */
.submit-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  margin-bottom: 20rpx;
}

.reset-btn {
  width: 100%;
}

.submit-btn:disabled,
.reset-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: var(--white);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-top: 20rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .image-item,
  .upload-btn {
    width: 160rpx;
    height: 160rpx;
  }
  
  .form-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
  
  .form-label {
    width: 100%;
  }
  
  .form-input,
  .form-picker {
    width: 100%;
  }
}

@media (max-width: 600rpx) {
  .page-header {
    padding: 30rpx 20rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .image-upload-container {
    gap: 15rpx;
  }
  
  .image-item,
  .upload-btn {
    width: 140rpx;
    height: 140rpx;
  }
  
  .section-title {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
  
  .title-text {
    font-size: 28rpx;
  }
  
  .title-desc {
    font-size: 22rpx;
  }
} 